<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#55A611"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgDef1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/av1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55A611"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Attack: X"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/txtDef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Defense: X"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/txtMaxHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="MaxHP: X"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/txtXP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="XP: X"
            android:textSize="21sp" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>