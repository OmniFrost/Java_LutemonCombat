<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4FF4A8">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddLutemon"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:background="#3A90ED"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Add new Lutemon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.909" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="223dp"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Lutemon name"
            android:inputType="textPersonName"
            android:shadowColor="#050505"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.679" />

        <RadioGroup
            android:id="@+id/rgAvatars"
            android:layout_width="114dp"
            android:layout_height="496dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.217">

            <RadioButton
                android:id="@+id/rbA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av1" />

            <RadioButton
                android:id="@+id/rbA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av2" />

            <RadioButton
                android:id="@+id/rbA3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av3" />

            <RadioButton
                android:id="@+id/rbA4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av4" />

            <RadioButton
                android:id="@+id/rbA5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av5" />

            <RadioButton
                android:id="@+id/rbA6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av6" />

            <RadioButton
                android:id="@+id/rbA7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av7" />

            <RadioButton
                android:id="@+id/rbA8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/av8" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="340dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rbWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="White" />

            <RadioButton
                android:id="@+id/rbGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green" />

            <RadioButton
                android:id="@+id/rbPink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pink" />

            <RadioButton
                android:id="@+id/rbOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orange" />

            <RadioButton
                android:id="@+id/rbBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
